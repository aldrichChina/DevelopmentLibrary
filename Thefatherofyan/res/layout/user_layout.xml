<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/loginMenu_include"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/loginmenu" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/imageheight" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/imageheight"
            android:background="@drawable/user_bg" />

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30.0dip"
            android:gravity="center"
            android:visibility="gone" >

            <ImageView
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_marginLeft="50.0dip"
                android:padding="5.0dip"
                android:src="@drawable/image_user" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/username"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="5.0dip"
                    android:text="11111111@qq.com"
                    android:textColor="@color/white"
                    android:textSize="@dimen/mainText" />

                <TextView
                    android:layout_width="80.0dip"
                    android:layout_height="20.0dip"
                    android:layout_gravity="left"
                    android:layout_marginBottom="5.0dip"
                    android:background="@drawable/user_orang_bg"
                    android:gravity="center"
                    android:text="普通会员"
                    android:textColor="@color/white"
                    android:textSize="@dimen/mainText" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="会员积分：0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/mainText" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50.0dip"
            android:gravity="center"
            android:visibility="gone" >

            <Button
                android:id="@id/btn1"
                android:layout_width="120.0dip"
                android:layout_height="40.0dip"
                android:layout_marginRight="10.0dip"
                android:background="@drawable/user_btn_bg"
                android:text="登    录"
                android:textColor="@color/white"
                android:textSize="@dimen/mainText" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="120.0dip"
                android:layout_height="40.0dip"
                android:background="@drawable/user_btn_bg"
                android:text="注    册"
                android:textColor="@color/white"
                android:textSize="@dimen/mainText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            android:layout_alignParentBottom="true"
            android:background="@drawable/user_line_bg" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:padding="5.0dip"
                android:src="@drawable/image_pay" />

            <TextView
                android:layout_width="1.0dip"
                android:layout_height="fill_parent"
                android:layout_marginBottom="15.0dip"
                android:layout_marginTop="15.0dip"
                android:background="@drawable/menu_line" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:padding="5.0dip"
                android:src="@drawable/image_accpet" />

            <TextView
                android:layout_width="1.0dip"
                android:layout_height="fill_parent"
                android:layout_marginBottom="15.0dip"
                android:layout_marginTop="15.0dip"
                android:background="@drawable/menu_line" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:padding="5.0dip"
                android:src="@drawable/image_freeback" />

            <TextView
                android:layout_width="1.0dip"
                android:layout_height="fill_parent"
                android:layout_marginBottom="15.0dip"
                android:layout_marginTop="15.0dip"
                android:background="@drawable/menu_line" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:padding="5.0dip"
                android:src="@drawable/image_book" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_margin="5.0dip"
            android:padding="5.0dip"
            android:src="@drawable/user_collect" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="收藏夹"
            android:textColor="@color/black"
            android:textSize="18.0sp" />
    </LinearLayout>

    <TextView
        android:id="@id/register1_line"
        android:layout_width="fill_parent"
        android:layout_height="0.100000024dip"
        android:background="@color/black" />

    <LinearLayout
        android:id="@+id/layout6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_margin="5.0dip"
            android:padding="5.0dip"
            android:src="@drawable/user_shop" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="购物车"
            android:textColor="@color/black"
            android:textSize="18.0sp" />
    </LinearLayout>

    <TextView
        android:id="@id/register1_line"
        android:layout_width="fill_parent"
        android:layout_height="0.100000024dip"
        android:background="@color/black" />

    <LinearLayout
        android:id="@+id/layout7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_margin="5.0dip"
            android:padding="5.0dip"
            android:src="@drawable/user_gift_card" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="礼品卡"
            android:textColor="@color/black"
            android:textSize="18.0sp" />
    </LinearLayout>

    <TextView
        android:id="@id/register1_line"
        android:layout_width="fill_parent"
        android:layout_height="0.100000024dip"
        android:background="@color/black" />

    <LinearLayout
        android:id="@+id/layout8"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_margin="5.0dip"
            android:padding="5.0dip"
            android:src="@drawable/user_address" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="地址管理"
            android:textColor="@color/black"
            android:textSize="18.0sp" />
    </LinearLayout>

    <TextView
        android:id="@id/register1_line"
        android:layout_width="fill_parent"
        android:layout_height="0.100000024dip"
        android:background="@color/black" />

    <Button
        android:id="@+id/exit"
        android:layout_width="200.0dip"
        android:layout_height="40.0dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30.0dip"
        android:background="@drawable/user_exit_btn"
        android:text="退出账号"
        android:textColor="@color/white"
        android:textSize="@dimen/mainText" />

</LinearLayout>