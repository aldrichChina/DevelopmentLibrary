<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView 
        android:id="@+id/music_pic"
        android:layout_width="192dip"
        android:layout_height="260dip"
        android:src="@drawable/music_2"/>
   	<TextView 
   	    android:id="@+id/music_lrc"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:layout_toRightOf="@id/music_pic"
   	    android:text="歌词"
   	    android:gravity="center"
   	    android:layout_alignBottom="@id/music_pic"
   	    android:layout_alignTop="@id/music_pic"/>
   	<Button 
   	    android:id="@+id/play"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:text="播放"
   	    android:layout_below="@id/music_pic"/>
   	<SeekBar 
   	    android:id="@+id/progress"
   	    android:max="100"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:layout_toRightOf="@id/play"
   	    android:layout_below="@id/music_pic"/>

</RelativeLayout>