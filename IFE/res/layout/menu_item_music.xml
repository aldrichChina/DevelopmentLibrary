<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:id="@+id/name"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dip"
            android:textSize="15sp" />
        <ImageView
            android:contentDescription="@string/app_name"
            android:id="@+id/current_playing"
            android:layout_width="25dip"
            android:layout_height="24dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="49dip" 
            android:src="@drawable/current_music_indicator"/>

        <ImageView
            android:contentDescription="@string/app_name"
            android:id="@+id/current_indicator"
            android:layout_width="24dip"
            android:layout_height="24dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="19dip"
            android:src="@drawable/current_indicator" />
    </RelativeLayout>



</LinearLayout>