<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >

    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="105dp"
        android:background="@drawable/button_bg_normal" >

        <ImageView
            android:id="@+id/game_icon"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/game_txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/game_icon"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="26dp"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_toRightOf="@+id/game_icon" />

        <TextView
            android:id="@+id/game_txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/game_txt_name"
            android:layout_below="@+id/game_txt_name" />

    </RelativeLayout>

</LinearLayout>