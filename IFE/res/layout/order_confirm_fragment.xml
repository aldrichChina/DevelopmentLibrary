<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dip" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gainsboro"
        android:gravity="start|center"
        android:padding="10dip"
        android:text="填写并核对订单信息"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#11000000" />

    <ScrollView
        android:id="@+id/sv_order_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout  android:id="@+id/ll_user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:paddingBottom="10dip"
                    android:paddingLeft="20dip"
                    android:paddingTop="10dip"
                    android:text="收货人信息"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="90dip"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dip"
                        android:gravity="right|center"
                        android:text="收  货  人:"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_name_get_goods"
                        android:layout_width="300dip"
                        android:layout_height="40dip"
                        android:layout_marginLeft="10dip"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edit_order"
                        android:gravity="left|center"
                        android:hint="请输入收货人姓名"
                        android:imeOptions="actionNext"
                        android:maxLength="15"
                        android:padding="10dip"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/img_name_get_goods_star"
                        android:layout_width="8.0dip"
                        android:layout_height="8.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:src="@drawable/star_red"
                        android:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="90dip"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dip"
                        android:gravity="right|center"
                        android:text="地        址:"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_address_get_goods"
                        android:layout_width="300dip"
                        android:layout_height="40dip"
                        android:layout_marginLeft="10dip"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edit_order"
                        android:gravity="left|center"
                        android:hint="请输入收件地址"
                        android:imeOptions="actionNext"
                        android:maxLength="30"
                        android:padding="10dip"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/img_address_get_goods_star"
                        android:layout_width="8.0dip"
                        android:layout_height="8.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:src="@drawable/star_red"
                        android:layout_gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="90dip"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dip"
                        android:gravity="right|center"
                        android:text="手机号码:"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_phone_get_goods"
                        android:layout_width="300dip"
                        android:layout_height="40dip"
                        android:layout_marginLeft="10dip"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edit_order"
                        android:gravity="left|center"
                        android:hint="请输入联系电话"
                        android:imeOptions="actionDone"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:padding="10dip"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/img_phone_get_goods_star"
                        android:layout_width="8.0dip"
                        android:layout_height="8.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:src="@drawable/star_red"
                        android:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dip"
                    android:layout_marginTop="10dip"
                    android:layout_marginLeft="10dip"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dip"
                        android:background="@drawable/btn_blue_normal"
                        android:gravity="center"
                        android:paddingBottom="10dip"
                        android:paddingLeft="40dip"
                        android:paddingRight="40dip"
                        android:paddingTop="10dip"
                        android:text="保存"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btn_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:background="@null"
                        android:gravity="center"
                        android:textColor="#CC9977"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gainsboro" />

            <LinearLayout  android:id="@+id/pay_and_delivery_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:paddingBottom="10dip"
                    android:paddingLeft="20dip"
                    android:paddingTop="10dip"
                    android:text="支付及配送方式"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="90dip"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dip"
                        android:gravity="right|center"
                        android:text="支付方式:"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_pay_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="90dip"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dip"
                        android:gravity="right|center"
                        android:text="配送方式:"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_delivery_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gainsboro" />

            <LinearLayout
                android:id="@+id/invoice_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:paddingBottom="10dip"
                    android:paddingLeft="20dip"
                    android:paddingTop="10dip"
                    android:text="发票信息"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="90dip"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dip"
                        android:gravity="right|center"
                        android:text="发票类型:"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                     <TextView
                        android:id="@+id/tv_none_invoice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:paddingBottom="10dip"
                        android:paddingLeft="20dip"
                        android:paddingRight="20dip"
                        android:paddingTop="10dip"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:text="无需发票" />

                     <TextView
                        android:id="@+id/tv_normal_invoice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:paddingBottom="10dip"
                        android:paddingLeft="20dip"
                        android:paddingRight="20dip"
                        android:paddingTop="10dip"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:text="普通发票" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_invoice_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="90dip"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dip"
                        android:paddingLeft="20dip"
                        android:paddingTop="10dip"
                        android:gravity="right|center"
                        android:text="发票抬头:"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <RadioGroup
                        android:id="@+id/invoice_title_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:orientation="horizontal" >
                
                        <RadioButton
                            android:id="@+id/title_personal"
                            android:focusable="true" 
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="10dip"
                            android:layout_weight="1"
                            android:checked="true"
                            android:paddingLeft="5dip"
                            android:text="个人"
                            android:textColor="#000000" 
                            android:textSize="16sp" />
                        <RadioButton
                            android:id="@+id/title_company"
                            android:focusable="false" 
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="10dip"
                            android:layout_weight="1"
                            android:paddingLeft="5dp"
                            android:text="公司"
                            android:textColor="#000000"
                            android:textSize="16sp" />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/tv_invoice_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_centerInParent="true"
                        android:paddingBottom="10dip"
                        android:paddingLeft="20dip"
                        android:paddingTop="10dip"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/et_company_name"
                        android:layout_width="300dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edit_order"
                        android:gravity="left|center"
                        android:hint="请输入公司名称"
                        android:imeOptions="actionNext"
                        android:maxLength="30"
                        android:paddingBottom="10dip"
                        android:paddingLeft="10dip"
                        android:paddingTop="10dip"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/img_company_name_star"
                        android:layout_width="8.0dip"
                        android:layout_height="8.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:src="@drawable/star_red"
                        android:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:id = "@+id/ll_invoice_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="90dip"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dip"
                        android:gravity="right|center"
                        android:text="发票内容:"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                     <TextView
                        android:id="@+id/tv_invoice_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_centerInParent="true"
                        android:paddingBottom="10dip"
                        android:paddingLeft="20dip"
                        android:paddingRight="20dip"
                        android:paddingTop="10dip"
                        android:background="@drawable/bg_edit_blue"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:text="明细" />
                 </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginBottom="10dip"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_save_invoice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dip"
                        android:background="@drawable/btn_blue_normal"
                        android:gravity="center"
                        android:paddingBottom="10dip"
                        android:paddingLeft="40dip"
                        android:paddingRight="40dip"
                        android:paddingTop="10dip"
                        android:text="保存"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btn_change_invoice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:background="@null"
                        android:gravity="center"
                        android:textColor="#CC9977"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gainsboro" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_goods_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:paddingBottom="10dip"
                    android:paddingLeft="20dip"
                    android:paddingTop="10dip"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="商品清单" />

                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_grey"
                    android:padding="10dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="80dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:gravity="center"
                        android:text="商品图片"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
        
                    <TextView
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:gravity="center"
                        android:text="商品名称"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
        
                    <TextView
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:gravity="center"
                        android:text="款式规格"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
        
                    <TextView
                        android:layout_width="80dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:gravity="center"
                        android:text="单价(元)"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
        
                    <TextView
                        android:layout_width="120dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:gravity="center"
                        android:text="商品数量"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="80dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:gravity="center"
                        android:text="小计(元)"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edit_white"
                    android:orientation="horizontal" >

                    <com.fairlink.passenger.view.ListViewForScrollView
                        android:id="@+id/list_goods"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:cacheColorHint="#00000000"
                        android:divider="@null"
                        android:listSelector="#00000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_grey"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_order_total_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dip"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:padding="10dip" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_order_back"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dip"
                    android:paddingTop="20dip"
                    android:gravity="right|bottom"
                    android:background="@null"
                    android:textColor="#CC9977"
                    android:textSize="14sp" />
    
                <Button
                    android:id="@+id/btn_order_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:background="@drawable/btn_buy_selector"
                    android:gravity="right"
                    android:paddingBottom="10dip"
                    android:paddingLeft="60dip"
                    android:paddingRight="60dip"
                    android:paddingTop="10dip"
                    android:text="提交订单"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>