<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="38dip"
	>
	<ImageView 
	    android:id="@+id/current_indicator"
	    android:layout_width="24dip"
	    android:layout_height="24dip"
	    android:src="@drawable/current_music_indicator"
	    android:layout_centerVertical="true"/>
	<TextView 
	    android:id="@+id/index"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/current_indicator"
	    android:layout_marginLeft="15dip"
	    android:textSize="19sp"
	    android:gravity="center_vertical"
	    android:layout_centerVertical="true"/>
	<ImageView 
	    android:id="@+id/favorite"
	    android:layout_width="30dip"
	    android:layout_height="30dip"
	    android:src="@drawable/music_not_favorite"
	    android:layout_alignParentRight="true"
	     android:layout_centerVertical="true"
	     android:layout_marginRight="11dip"
	    />
	<TextView 
	    android:id="@+id/duration"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toLeftOf="@id/favorite"
	    android:layout_marginRight="23dip"
	    android:textSize="17sp"
	    android:gravity="center"
	    android:layout_centerVertical="true"/>
	<TextView 
	    android:id="@+id/singer"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toLeftOf="@id/duration"
	    android:layout_marginRight="23dip"
	    android:textSize="17sp"
	    android:gravity="center"
	    android:layout_centerVertical="true"/>
	<TextView 
	    android:id="@+id/name"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/index"
	    android:layout_toLeftOf="@id/singer"
	    android:layout_marginLeft="45dip"
	    android:textSize="19sp"
	    android:textColor="#FFFFFF"
	    android:gravity="left"
	    android:layout_centerVertical="true"/>
</RelativeLayout>