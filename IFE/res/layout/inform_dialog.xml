<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inform_layout"
    android:layout_width="500dp"
    android:layout_height="250dp"
    android:background="@drawable/inform_dialog_background" >

    <ImageView
        android:id="@+id/diaolog_left_img"
        android:layout_width="58dip"
        android:layout_height="58dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="34dp"
        android:src="@drawable/diaolog_left2"/>
    
    <TextView
        android:id="@+id/inform_txt"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/diaolog_left_img"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:text="旅客广播\n\nPublic Announcing"
        android:textSize="30sp" />



</RelativeLayout>
