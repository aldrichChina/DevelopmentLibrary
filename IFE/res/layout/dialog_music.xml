<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="422dip"
    android:layout_height="276dip"   
    android:background="@drawable/music_sleep_background"
    >
    <TextView 
        android:id="@+id/music_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dip"
        android:layout_marginRight="30dip"
        android:text="@string/music_dialog_time"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"    
        android:textColor="#000000"
        />
    <com.fairlink.passenger.view.SlipButton
        android:id="@+id/time_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/music_dialog_title"
        android:layout_marginTop="15dip"
        
        />
    
    <TextView
        android:id="@+id/music_dialog_sure"
        android:layout_width="178dip"
        android:layout_height="29dip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dip"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/login_dialog_confirm"
        android:textSize="16sp"
        android:background="@drawable/music_sleep_confirm"/>
    
    
                  
  <RelativeLayout
        android:id="@+id/music_center"
        android:layout_width="207dip"
        android:layout_height="104dip"
        android:background="@drawable/music_sleep_background2"
        android:layout_centerInParent="true">

        
        <EditText
            android:id="@+id/music_mins"
            android:layout_width="113dip"
            android:layout_height="38dip"
            android:background="@drawable/login_edit"
            android:gravity="center"
            android:numeric="integer"
            android:text="30"
            android:maxLength="3"       
            android:layout_centerInParent="true"/>
        
 

        
    </RelativeLayout>
    
               
    
</RelativeLayout>