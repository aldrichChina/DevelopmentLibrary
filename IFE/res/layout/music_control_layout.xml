<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:padding="5dip"
    android:id="@+id/rl"
    android:descendantFocusability="blocksDescendants"
    android:background="@android:color/transparent">
    <TextView 
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_gravity="center_vertical"
        android:textSize="15sp"
        android:paddingLeft="8dip"
        />
    <ImageView
        android:id="@+id/prev_music"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:src="@drawable/music_control_prev"
        android:background="@android:color/transparent"
        />
    <ImageView 
        android:id="@+id/play_pause"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:background="@android:color/transparent"/>
    
    <ImageView 
        android:id="@+id/next_music"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:src="@drawable/music_control_next"
        android:background="@android:color/transparent"/>
    <ImageView
        android:id="@+id/music_voice_control"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:src="@drawable/player_volume_img_small"
        android:background="@android:color/transparent"/>
    <ImageView
        android:id="@+id/music_sleep_control"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:src="@drawable/music_control_time"
        android:background="@android:color/transparent"/>
        

</LinearLayout>