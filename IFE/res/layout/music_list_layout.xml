<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/list_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="53dip"
         android:paddingBottom="10dip"
        android:visibility="visible" >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:textColor="#FFFFFF"
            android:textSize="33sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:id="@+id/music_control"
                android:layout_width="180dip"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/play_control"
                    android:layout_width="180dip"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:src="@drawable/music_prev" />

                    <ImageButton
                        android:id="@+id/play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:src="@drawable/music_play" />

                    <ImageButton
                        android:id="@+id/forward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:src="@drawable/music_next" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="180dip"
                    android:layout_height="180dip"
                    android:layout_below="@id/play_control"
                    android:layout_marginTop="30dip"
                    android:scaleType="fitXY" />

                <ImageView
                    android:layout_width="180dip"
                    android:layout_height="4dip"
                    android:layout_alignLeft="@id/image"
                    android:layout_alignRight="@id/image"
                    android:layout_below="@id/image"
                    android:layout_marginBottom="8dip"
                    android:layout_marginTop="15dip"
                    android:src="@drawable/progress_bg1" />

                <SeekBar
                    android:id="@+id/progress"
                    android:layout_width="180dip"
                    android:layout_height="5dip"
                    android:layout_alignLeft="@id/image"
                    android:layout_alignRight="@id/image"
                    android:layout_below="@id/image"
                    android:layout_marginBottom="8dip"
                    android:layout_marginTop="15dip"
                    android:max="100"
                    android:progressDrawable="@drawable/playbackbar"
                    android:thumb="@drawable/playbar_thumb"
                    android:thumbOffset="0dip" />

                <TextView
                    android:id="@+id/current_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/progress"
                    android:text="@string/start_time" />

                <TextView
                    android:id="@+id/end_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/progress"
                    android:layout_toRightOf="@id/current_time"
                    android:gravity="right"
                    android:text="@string/start_time" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/current_time"
                    android:layout_marginTop="23dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/recycle"
                        android:layout_width="32dip"
                        android:layout_height="21dip"
                        android:src="@drawable/recycle" />
                </LinearLayout>
            </RelativeLayout>

            <ListView
                android:id="@+id/music_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/music_control"
                android:layout_alignTop="@id/music_control"
                android:layout_marginLeft="56dip"
                android:layout_marginRight="64dip"
                android:layout_marginTop="15dip"
                android:layout_toRightOf="@id/music_control"
                android:cacheColorHint="@null"
                android:divider="@null"
                android:scrollbarThumbVertical="@drawable/scrollbar" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/empty_list"
        android:textSize="15sp"
        android:visibility="visible" />

</FrameLayout>