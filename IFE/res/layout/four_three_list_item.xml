<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="fill"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/movie_pic"
        android:layout_width="205dip"
        android:layout_height="225dip"
        android:scaleType="fitCenter"
        android:background="@color/transparent_20_white"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/default_400" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1.5dip"
        android:background="@color/goods_list_name_background_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="1.5dip" >

        <TextView
            android:id="@+id/mv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="start|center"
            android:singleLine="true"
            android:textColor="@color/goods_list_name_color"
            android:textSize="11sp" />

    </LinearLayout>

</RelativeLayout>