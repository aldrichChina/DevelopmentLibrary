<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:descendantFocusability="beforeDescendants"
    android:paddingTop="8dip"
    android:paddingBottom="8dip"
    android:paddingLeft="10dip"
    android:paddingRight="10dip" 
    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="98dip"
        android:layout_height="143dip"
        android:clickable="false"
        android:focusable="false"
        android:scaleType="fitCenter"
        android:background="@color/transparent_20_white"
        android:src="@drawable/default_200" />

    <ImageView
        android:id="@+id/image_forground"
        android:layout_width="98dip"
        android:layout_height="143dip"
        android:clickable="false"
        android:focusable="false"
        android:scaleType="fitXY"
        android:src="@drawable/movie_forground" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="15dip"
        android:layout_alignBottom="@id/image"
        android:layout_alignLeft="@id/image"
        android:layout_alignRight="@id/image"
        android:layout_marginBottom="10dip"
        android:background="@color/movie_name_bk"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center_vertical"
        android:paddingLeft="8dip"
        android:textSize="10dip"
         android:textColor="#FFFFFF" />

</RelativeLayout>