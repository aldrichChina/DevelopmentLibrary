<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dip" >

    <com.fairlink.passenger.view.TimeTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/time_font_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <fragment
            android:id="@+id/order_tip_button"
            android:name="com.fairlink.passenger.view.OrderTipButton"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" />

        <fragment
            android:id="@+id/cart_tip_button"
            android:name="com.fairlink.passenger.view.CartTipButton"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="44dip"
            android:layout_height="44dip"
            android:layout_marginLeft="15dip"
            android:layout_marginStart="15dip"
            android:background="@drawable/icon_back_main"
            android:onClick="onBackMainListener" />
    </LinearLayout>

</RelativeLayout>