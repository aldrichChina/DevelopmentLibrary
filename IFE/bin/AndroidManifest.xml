<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fairlink.passenger"
    android:versionCode="3"
    android:versionName="1.6.0.3" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD"/>

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:name="IFEApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:launchMode="singleTask"
        android:theme="@style/AppTheme" >

        <!--
               <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />

        -->
        <activity
            android:name="com.fairlink.passenger.LoginMain"
            android:configChanges="locale"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.MONKEY" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fairlink.passenger.admin.DevSettingActivity"
            android:configChanges="locale"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.fairlink.passenger.OngoingActivity"
            android:configChanges="locale"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" 
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.fairlink.passenger.plane.PlaneStatusActivity"
            android:configChanges="locale"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" 
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.fairlink.passenger.admin.ThirdPartyAppLauncher"
            android:configChanges="locale"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.fairlink.passenger.inform.InformDialog"
            android:configChanges="locale"
            android:label="@string/app_name"
            android:screenOrientation="behind"
            android:process="com.fairlink.passenger.informService"
            android:taskAffinity="com.fairlink.passenger.informService"
            android:allowTaskReparenting="true"
            android:theme="@style/MyDialogStyle" android:launchMode="singleInstance">
        </activity>
        <activity
            android:name="com.fairlink.passenger.video.MovieCategoryActivity"
            android:configChanges="locale"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.fairlink.passenger.video.TVCategoryActivity"
            android:configChanges="locale"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.fairlink.passenger.video.VideoPlayerActivity"
            android:configChanges="locale"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.fairlink.passenger.music.MusicCategoryActivity"
            android:label="music"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.fairlink.passenger.video.ChildWorldActivity"
            android:configChanges="locale"
            android:label="childworld"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>

        <service android:name="com.fairlink.passenger.music.MusicPlayerService" />

       
        <activity
            android:name="com.fairlink.passenger.book.BookMainViewActivity"
            android:configChanges="locale"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.fairlink.passenger.book.BookDetailActivity"
            android:configChanges="orientation|screenSize|keyboardHidden" 
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.fairlink.passenger.about.AboutMainActivity"
            android:configChanges="locale"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.fairlink.passenger.customer.CustomerMainActivity"
            android:configChanges="locale"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
