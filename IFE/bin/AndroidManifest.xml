        <activity
            android:name="com.fairlink.passenger.club.ClubMainActivity"
            android:configChanges="locale"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.fairlink.passenger.game.GameMainActivity"
            android:configChanges="locale"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.fairlink.passenger.shop.ShopMainActivity"
            android:configChanges="locale"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.fairlink.passenger.shop.ShopItemDetailActivity"
            android:configChanges="locale"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/TransparentActivity" >
        </activity>
        <activity
            android:name="com.fairlink.passenger.setting.SettingMainActivity"
            android:configChanges="locale"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.fairlink.passenger.shop.GoodsShowImg"
            android:configChanges="locale"
            android:screenOrientation="landscape"
            android:theme="@style/TransparentActivity" >
        </activity>
        <activity
            android:name="com.fairlink.passenger.cart.CartActivity"
            android:configChanges="locale"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.fairlink.passenger.order.OrderActivity"
            android:configChanges="locale"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
